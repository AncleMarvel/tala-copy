<div class="hero">
    <div class="hero__text-content">
        <div class="hero__left-column">
            <h1 class="hero-heading">
                {% assign letters = section.settings.heading | split: '' %}
                <div class="hero-heading__text">
                    {% for letter in letters %}
                        <div class="hero-heading__letter c-h1">
                            {{ letter }}
                        </div>
                    {% endfor %}
                </div>
                <span class="hero-heading__superscript c-superscript">
                    {{ section.settings.heading_superscript }}
                </span>
            </h1>
            <div class="hero-richtext__splitted-wrapper c-h3">
                {{ section.settings.richtext }}
            </div>
        </div>
        <div class="hero__right-column">
            <a href="{{ section.settings.link_url }}" class="hero-link c-link">
                {{ section.settings.link_text }}
            </a>
        </div>
    </div>
    <div class="hero-image-wrapper">
        {{ section.settings.image | image_url: width: 1440 | image_tag }}
    </div>
</div>

{{ 'section-hero.css' | asset_url | stylesheet_tag }}

{% schema %}
{
    "name": "Hero",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "TALA"
        },
        {
            "type": "text",
            "id": "heading_superscript",
            "label": "Heading superscript",
            "default": "Â®"
        },
        {
            "type": "richtext",
            "id": "richtext",
            "label": "Richtext",
            "default": "<p>We're bringing fruit snacks back to their roots with perfectly ripe fruit bursting with flavor.</p>"
        },
        {
            "type": "text",
            "id": "link_text",
            "label": "Link text",
            "default": "SHOP AMAZON"
        },
        {
            "type": "url",
            "id": "link_url",
            "label": "Link url"
        },
        {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
        }
    ]
}
{% endschema %}